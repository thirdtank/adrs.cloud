<label class="flex flex-column gap-1 w-100">
  <div class="textarea-container">
    <% if prefix %>
    <div class="inner-label"><%= prefix %></div>
    <% end %>
    <%=
      component(
        Brut::Input::Textarea.new(
          form: adr,
          input: name,
          attributes: {
            rows: 3,
            class: "textarea"
          }
        )
      )
    %>
  </div>
  <div class="text-field-label">
    <span class="f-1"><%= label %></span>
  </div>
</label>
