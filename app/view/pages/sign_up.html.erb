<header>
  <h1 class="tc ma-0 mt-3 ttu tracked-tight f-7">ADRpg</h1>
  <h2 class="tc mt-0 f-5 fw-5">Sign Up</h2>
</header>
<section class="pa-3">
  <% if !content.new? && !content.valid? %>
    <aside class="pa-3 br-3 w-50 mh-auto ba bc-red-500 bg-red-800 red-300">
    Problem signing you up.
    </aside>
  <% end %>
  <brut-form show-warnings="sign-up-form">
  <form action="/auth/sign-up" method="post" class="flex flex-column items-center gap-2 shadow-2-ns mh-auto pa-4-ns br-1 bg-white-ish-ns mw-8 w-100 w-70-m w-50-ns">
    <%= component(Components::TextField.new(label: "Email",
                                            form: content,
                                            input_name: "email",
                                            placeholder: "e.g. pat@example.com",
                                            autofocus: true)) %>
    <%= component(Components::TextField.new(label: "Password",
                                            form: content,
                                            input_name: "password")) %>
    <%= component(Components::TextField.new(label: "Confirm Password",
                                            form: content,
                                            input_name: "password_confirmation")) %>

    <div class="mt-2">
      <%= component(Components::Button.new(color: "purple", label: "Sign Up", icon: "plus-round-line-icon")) %>
    </div>
  </form>
  </brut-form>
  <nav class="tc mv-4">
    <a class="        dib ph-3 pv-2 br-3 purple-400 hover-bg-purple-700" href="/auth/login">Login Instead</a>
    <a class="        dib ph-3 pv-2 br-3 purple-400 hover-bg-purple-700" href="/auth/forgot-password">Forgot Password</a>
  </nav>
</section>
