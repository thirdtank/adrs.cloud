<% if refined_by_adrs.any? %>
  <section class="pa-3 bg-blue-800 gray-200 bc-blue-700 bt">
    <h4 class="f-2 fw-6 mt-2 mb-1 flex items-center gap-2">
      <span class="w-2">
        <%= svg("adjust-control-icon") %>
      </span>
      Refinements
    </h4>
    <table class="collapse w-100 mh-auto f-1">
      <thead>
        <tr>
          <th class="tl pv-2 pr-2 fw-bold bb">
            Title
          </th>
          <th class="tl pv-2 pr-2 fw-bold bb">
            Status
          </th>
          <th class="tl pv-2 pr-2 fw-bold bb">
            Date
          </th>
        </tr>
      </thead>
      <tbody>
        <% refined_by_adrs.each do |refining_adr| %>
          <tr>
            <td class="pv-2 pr-2"><a class="blue-300" href="<%= adr_path(refining_adr) %>"><%= refining_adr.title %></a></td>
            <td class="pv-2 pr-2">
              <% if refining_adr.accepted? %>
                Accepted
              <% elsif refining_adr.rejected? %>
                Rejected
              <% else %>
                Draft
              <% end %>
            </td>
            <td class="pv-2 pr-2">
              <% if refining_adr.accepted? %>
                <%= refining_adr.accepted_at %>
              <% elsif refining_adr.rejected? %>
                <%= refining_adr.rejected_at %>
              <% else %>
                <%= refining_adr.created_at %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </section>
<% end %>
