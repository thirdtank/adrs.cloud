<label class="flex items-center gap-3">
  <%= component(checkbox) %>
  <div class="checkbox-label">
    <%= label %>
  </div>
  <div class="text-field-error-label">
    <brut-constraint-violation-messages input-name="<%= input_name %>" class="flex flex-wrap items-baseline">
    <% constraint_violations.each do |constraint| %>
      <% if !constraint.client_side? %>
        <brut-constraint-violation-message server-side>
          <%= t("cv.be.#{constraint}", **constraint.context).capitalize %>
        </brut-constraint-violation-message>
      <% end %>
    <% end %>
    </brut-constraint-violation-messages>
  </div>
</label>
