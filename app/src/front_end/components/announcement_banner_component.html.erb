<div class="w-100">
  <% messages.each do |message| %>
    <div <%= message.show ? "" : "hidden" %> class="<%= message.css_classes %> pv-2 ph-3 f-1 flex items-center gap-3" role="<%= message.role %>">
      <span class="w-2 flex flex-column justify-center">
        <%= svg(message.svg) %>
      </span>
      <p class="p ma-0">
        <% if !message.i18_key.nil? %>
          <%= t_html(message.i18_key) %>
        <% end %>
      </p>
    </div>
  <% end %>
</div>
