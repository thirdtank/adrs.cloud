<section
  role="tabpanel"
  tabindex="0"
  id="<%= tab %>-panel"
  class="w-100" 
  <% if !selected? %>
       hidden
  <% end %>
>
  <h2 class="ph-3 f-4 b ma-0 mt-4"><%= tab %></h2>
  <% if adrs.any? %>
    <table class="collapse ma-3 striped">
      <caption class="sr-only">CAPTION HERE</caption>
      <thead>
        <tr>
          <% columns.each do |column| %>
            <th class="tl ws-nowrap f-1 ttu b pa-2 bb bc-gray-600">
              <%= column %>
            </th>
          <% end %>
          <th class="tl ws-nowrap f-1 ttu b pa-2 bb bc-gray-600"><span class="sr-only">Actions</span></th>
        </tr>
      </thead>
      <tbody>
        <% adrs.each do |adr| %>
          <tr>
            <% columns.each_with_index do |column, index| %>
              <td class="<%= index == 0 ? 'w-100 bl f-3' : 'f-2' %> pa-2 lh-copy va-middle bb br bc-gray-600">
                <%= column_value(adr,column) %>
              </td>
            <% end %>
            <td class="pa-2 tr va-middle bb br bc-gray-600">
              <% if custom_action? %>
                <%= action_block(adr) %>
              <% else %>
                <nav class="flex items-baseline gap-2 mv-2">
                  <a class="blue-400 ws-nowrap" href="<%= action_routing(adr) %>"><%= action_name %></a>
                </nav>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p class="ma-3 p i">None</p>
  <% end %>
</section>
