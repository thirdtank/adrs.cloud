<header class="ph-3 mv-4">
  <h1 class="tc ma-0">ADRpg</h1>
  <h2 class="tc ma-0">Your one-stop shop for managing Architecture Decision Records</h2>
</header>
<main class="ph-3 mv-4">
  <% if !info.nil? %>
    <aside class="p mh-auto ba shadow-4 bc-blue-800 br-2 pa-3 blue-300 bg-blue-900 tc"><%= info %></aside>
  <% end %>
  <% if !check_result.nil? && check_result.invalid? %>
    <aside class="p mh-auto ba shadow-4 bc-red-800 br-2 pa-3 red-300 bg-red-900 tc">
      <% check_result.each_violation do |object,field,key,context| %>
        <%= object %>
        <%= field %>
        <%= key %>
        <%= context %>
      <% end %>
    </aside>
  <% end %>
  <h3 class="tc flex flex-column gap-2">
    <form action="/auth/developer" method="POST">
      <%= csrf_token_field %>
      <button type="submit" class="ph-3 pv-2 ba br-3 shadow-1 bc-gray-600 bg-white black">Sneak Login!</button>
    </form>
    <form action="/auth/github" method="POST">
      <%= csrf_token_field %>
      <button type="submit" class="ph-3 pv-2 ba br-3 shadow-1 bc-gray-600 bg-white black">GitHub Login!</button>
    </form>
  </h3>
</main>
<footer class="ph-3">
  <p class="lh-copy tc">Copyright Â© 2024 by Third Tank LLC, All Rights Reserved.</p>
</footer>
